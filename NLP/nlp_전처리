#1. 표제어 추출 시 특정 단어가 분리될 때 합치는 법

test1 =  ["네","고","왕", "좋다"] # 0,1,2번째 인덱스에 네,고,왕 발견. 잘못 표제어 추출됨.
#test2 = ['나',"네","고","왕", '네' ,"좋다",'고']
tlist = test2
sent = "".join(tlist) # 띄어쓰기없게 합치기
p = re.compile('네고왕')
s = p.search(sent)
a = s.span() # "네고왕"

#리스트의 네고왕 인덱스 저장
start = a[0]
end = a[1]-1
#'네','고','왕' 삭제
del(tlist[start:end])
# 합친 글자 추가 
tlist[start] = '네고왕'
tlist # 정상적으로 리스트 저장됨
